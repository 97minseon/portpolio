<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cook.mymealkit.mapper.ItemMapper">

	<insert id="itemInsert" parameterType="com.cook.mymealkit.vo.ItemVO">
		insert into item (itemid, category, name, price,description) 
			values(seq_item.nextval,#{category},#{name},#{price},#{description})
	</insert>
	
	<select id="itemList" resultType="com.cook.mymealkit.vo.ItemVO">
		select * from item
	</select>
	
	<update id="itemUpdate">
		update item set (category=#{category}, name=#{name}, price=#{price},description=#{description})
	</update>

</mapper>


