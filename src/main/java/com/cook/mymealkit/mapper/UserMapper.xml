<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cook.mymealkit.mapper.UserMapper">
	
	<!--회원가입 -->
  	<insert id="insertUser" parameterType="com.cook.mymealkit.domain.UserVO">
        insert into tbl_user (uno, user_id, user_name, pwd , email, phone , post_code , addr , addr2)
        	values (seq_user.nextval,#{user_id},#{user_name},#{pwd},#{email},#{phone},#{post_code},#{addr},#{addr2})
    </insert>
    
    <!-- ID중복체크 -->
    <select id="idCheck" resultType="com.cook.mymealkit.domain.UserVO" parameterType="String">
  		<!-- select count(*) from tbl_user where user_id = #{user_id} -->
  		select * from tbl_user where user_id=#{user_id}
  	</select>
     
     <!--회원정보 수정 -->
	<update id="updateUser" parameterType="com.cook.mymealkit.domain.UserVO">
        update tbl_user set user_id=#{user_id}, user_name=#{user_name}, pwd=#{pwd}, email=#{email}, phone=#{phone}, post_code=#{post_code}, addr=#{addr}, addr2=#{addr2}
    </update>
    
    <!--회원탈퇴 -->
	<delete id="deleteUser" parameterType="com.cook.mymealkit.domain.UserVO">
        delete from tbl_user where user_id=#{user_id} and pwd=#{pwd}
    </delete>
    
   	<!--관리자 전체 회원 정보 조회 -->
	<select id="getAllUsers" parameterType="com.cook.mymealkit.domain.UserVO" resultType="com.cook.mymealkit.domain.UserVO">
        select * from tbl_user
    </select>
    
     <!--마이페이지 -->
    <!-- 로그인 처리를 위한 회원 정보 조회 -->
    <select id="readUser" parameterType="com.cook.mymealkit.domain.UserVO" resultType="com.cook.mymealkit.domain.UserVO">
        select * from tbl_user where user_id=#{user_id} and pwd=#{pwd}
    </select>
    
    <select id="getUserById" parameterType="string" resultType="com.cook.mymealkit.domain.UserVO">
        select * From tbl_user where user_id = #{user_id} 
    </select>
    
</mapper>

