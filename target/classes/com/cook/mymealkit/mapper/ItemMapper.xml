<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cook.mymealkit.mapper.ItemMapper">

	<insert id="itemInsert" parameterType="com.cook.mymealkit.domain.ItemVO">
		insert into item (itemid, category, name, price,description) 
			values(seq_item.nextval,#{category},#{name},#{price},#{description})
	</insert>
	<select id="itemList" resultType="com.cook.mymealkit.domain.ItemVO">
		<![CDATA[
  		select * from item where itemid >0
  		]]>
	</select>
	<select id="itemFindById" resultType="com.cook.mymealkit.domain.ItemVO" parameterType="long">
		select * from item where itemid=#{itemid}
	</select>
	<update id="itemUpdate" parameterType="com.cook.mymealkit.domain.ItemVO">
		update item set category=#{category}, name=#{name}, price=#{price},description=#{description} where itemid=#{itemid}
	</update>
	<delete id="itemDelete">
		delete from item where itemid=#{itemid}
	</delete>
	<select id="getMax" resultType="long">
		select max(itemid) from item
	</select>
	<select id="getByItemid" resultType="com.cook.mymealkit.domain.ItemVO" parameterType="Long">
		select * from item where itemid=#{itemid}
	</select>
</mapper>
